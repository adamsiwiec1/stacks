
# run mysql container
docker run --name snipe-mysql --env-file=snipe-it-local/.env --mount source=snipesql-vol,target=/var/lib/mysql -d -P mysql:5.6

# run snipeit
docker run -d -p 6969:80 --name="snipeit" --link snipe-mysql:mysql --env-file=snipe-it-local/.env --mount source=snipe-vol,dst=/var/lib/snipeit snipe/snipe-it
